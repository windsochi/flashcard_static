<% content_for(:title, 'Вход в систему') %>
<%= form_tag login_path, method: :post do %>

  <div class="user-sessions">
    <%= label_tag 'email' %>
    <%= text_field_tag :email %>
  </div>

  <div class="user-sessions">
    <%= label_tag 'password' %>
    <%= password_field_tag :password %>
  </div>

  <div class="user-sessions">
    <%= submit_tag 'Login' %>
  </div>

<% end %>
