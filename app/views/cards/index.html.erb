<table class="cards">
  <tr>
    <th>Review date</th>
    <th>Original</th>
    <th>Translate</th>
 </tr>

<% @cards.each do |card| %>

  <tr>
    <td><%= card.review_date.to_s(:month_and_year) %>     </td>
    <td><%= card.original_text %>   </td>
    <td><%= card.translated_text %> </td>
 </tr>

<% end %>

</table>
