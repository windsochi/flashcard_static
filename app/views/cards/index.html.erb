<table class="cards">
  <tr>
    <th>Review date</th>
    <th>Original</th>
    <th>Translate</th>
    <th></th>
    <th></th>
  </tr>

  <% @cards.each do |card| %>

  <tr>
    <td><%= card.review_date.to_s(:month_and_year) %>     </td>
    <td><%= card.original_text %>   </td>
    <td><%= card.translated_text %> </td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><a href="#">Delete</a></td>
  </tr>

  <% end %>

</table>
